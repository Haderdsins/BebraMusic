@page
@model BebraMusic.UI.Pages.Authors.Create

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Create Author</title>
</head>
<body>
    <div>
        <form method="post">
            <input asp-for="Author.Id"/>
            <span asp-validation-for="Author.Id" class="text-danger"></span>

            <input asp-for="Author.Name"/>
            <span asp-validation-for="Author.Name" class="text-danger"></span>

            <input class="btn" type="submit" value="Add"/>
        <div class="text-danger">
            @if (TempData["ErrorMessage"] != null)
            {
                <p>@TempData["ErrorMessage"]</p>
            }
        </div>

        </form>
    </div>
</body>
</html>
