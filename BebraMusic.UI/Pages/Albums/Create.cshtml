@page
@model BebraMusic.UI.Pages.Albums.Create

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Create album</title>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        form {
            width: 300px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        input,
        select {
            margin-bottom: 10px;
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        .btn {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div>
        <form method="post">

            <label for="Album_Title">Введите название альбома:</label>
            <input id="Album_Title" asp-for="Album.Title"/>
            <span asp-validation-for="Album.Title" class="text-danger"></span>
            
            <label for="Album_Year">Введите год релиза:</label>
            <input id="Album_Year" asp-for="Album.Year"/>
            <span asp-validation-for="Album.Year" class="text-danger"></span>            
            
            <label for="Song_Artist">Выберите исполнителя:</label>
            <select asp-for="AuthorId" asp-items="Model.Authors" required>
                <option disabled="disabled" value="">Выберите автора</option>
            </select>
            <span asp-validation-for="Album.Author" class="text-danger"></span>
            
            <label for="Song_Genre">Выберите жанр:</label>
            <select asp-for="GenreId" asp-items="Model.Genres" required>
                <option disabled="disabled" value="">Выберите жанр</option>
            </select>
            <span asp-validation-for="Album.Genre" class="text-danger"></span>
            <br></br>            
            
            <input class="btn" type="submit" value="Вписать в историю!"/>
            
            <div class="text-danger">
                @if (TempData["ErrorMessage"] != null)
                {
                    <p>@TempData["ErrorMessage"]</p>
                }
            </div>
        </form>
    </div>
</body>
</html>
