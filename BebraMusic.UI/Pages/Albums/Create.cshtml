@page
@model BebraMusic.UI.Pages.Albums.Create

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Create album</title>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        form {
            width: 300px; /* Ширина формы, установите значение по вашему усмотрению */
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        input {
            margin-bottom: 10px;
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        .btn {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div>
        <form method="post">
            <label for="Album_Id">Введите ID:</label>
            <input id="Album_Id" asp-for="Album.Id"/>
            <span asp-validation-for="Album.Id" class="text-danger"></span>

            <label for="Album_Title">Введите название:</label>
            <input id="Album_Title" asp-for="Album.Title"/>
            <span asp-validation-for="Album.Title" class="text-danger"></span>
            
            <label for="Album_Artist">Введите исполнителя:</label>
            <input id="Album_Artist" asp-for="Album.Artist"/>
            <span asp-validation-for="Album.Artist" class="text-danger"></span>

            <input class="btn" type="submit" value="Вписать в историю!"/>
            <div class="text-danger">
                @if (TempData["ErrorMessage"] != null)
                {
                    <p>@TempData["ErrorMessage"]</p>
                }
            </div>
        </form>
    </div>
</body>
</html>
